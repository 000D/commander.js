html
  head
    title Commander.js - nodejs cli framework
    link(rel='stylesheet', href='style.css')
  body
    #content
      h1 Commander.js
      p.
        Commander is a light-weight, expressive, and powerful command-line
        framework for <a href="http://nodejs.org">node.js</a>.
      for comment in comments
        if comment.ignore || !comment.ctx || 'version' == comment.ctx.name
          - continue
        if ~comment.description.full.indexOf('Module dependencies')
          - continue
        .comment
          if ~comment.ctx.string.indexOf('prototype')
            h1= comment.ctx.string.replace('.prototype.', '#')
          else
            h1= comment.ctx.string
          .description!= comment.description.full
          h2 Implementation
          pre
            code!= comment.code
    
    ul#menu
      for comment in comments
        if comment.ignore || !comment.ctx || 'version' == comment.ctx.name
          - continue
        if ~comment.description.full.indexOf('Module dependencies')
          - continue
        li
          if ~comment.ctx.string.indexOf('prototype')
            a(href='#')= comment.ctx.string.replace('.prototype.', '#')
          else
            a(href='#')= comment.ctx.string
    